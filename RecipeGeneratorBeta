<body>

<div class="app">
  <h1>Recipe Suggester</h1>
  <p>Select ingredients you have:</p>
  <div class="ingredients" id="ingredientList">
    <!-- Ingredients checkboxes go here -->
  </div>

  <button onclick="suggestRecipe()">Suggest Recipe</button>

  <div class="result" id="resultBox" style="display:none;"></div>
</div>

<script>
  const ingredients = [
    "Eggs", "Milk", "Cheese", "Bread", "Tomato",
    "Pasta", "Chicken", "Rice", "Beans", "Spinach",
    "Potato", "Onion", "Garlic", "Butter", "Carrot"
  ];

  const recipes = [
    {
      name: "Grilled Cheese Sandwich",
      needs: ["Bread", "Cheese", "Butter"]
    },
    {
      name: "Omelette",
      needs: ["Eggs", "Milk", "Onion"]
    },
    {
      name: "Chicken Stir Fry",
      needs: ["Chicken", "Carrot", "Onion", "Garlic"]
    },
    {
      name: "Tomato Pasta",
      needs: ["Pasta", "Tomato", "Garlic"]
    },
    {
      name: "Rice and Beans",
      needs: ["Rice", "Beans"]
    },
    {
      name: "Mashed Potatoes",
      needs: ["Potato", "Butter", "Milk"]
    },
    {
      name: "Spinach Salad",
      needs: ["Spinach", "Tomato", "Onion"]
    }
  ];

  // Generate checkboxes
  const ingredientList = document.getElementById("ingredientList");
  ingredients.forEach(ing => {
    const label = document.createElement("label");
    label.innerHTML = `
      <input type="checkbox" value="${ing}" />
      ${ing}
    `;
    ingredientList.appendChild(label);
  });

  function suggestRecipe() {
    const selected = Array.from(document.querySelectorAll('input[type="checkbox"]:checked'))
                          .map(cb => cb.value);

    const matched = recipes.filter(recipe =>
      recipe.needs.every(item => selected.includes(item))
    );

    const resultBox = document.getElementById("resultBox");
    resultBox.style.display = "block";

    if (matched.length > 0) {
      resultBox.innerHTML = `<strong>Suggested Recipe:</strong> ${matched[0].name}`;
    } else {
      resultBox.innerHTML = "Sorry, no matching recipe found. Try selecting more ingredients!";
    }
  }
</script>

</body>
</html>
